# Environment Configuration
NODE_ENV=development

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-nextauth-key-change-in-production

# Database URLs
DATABASE_URL=postgresql://postgres:policylabs123@localhost:5432/policylabs
REDIS_URL=redis://localhost:6379

# External APIs
OPENAI_API_KEY=your-openai-api-key-here
WEAVIATE_URL=http://localhost:8080

# Security Configuration
# Comma-separated list of allowed email domains for government access
ALLOWED_EMAIL_DOMAINS=gov.br,prefeitura.sp.gov.br,pmf.sc.gov.br

# Audit Logging
AUDIT_API_KEY=your-audit-service-api-key

# Email Configuration (for production)
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@example.com
EMAIL_SERVER_PASSWORD=your-email-password
EMAIL_FROM=noreply@policylabs.ai

# Analytics (optional)
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# Feature Flags
ENABLE_MFA=true
ENABLE_AUDIT_LOGGING=true
ENABLE_RATE_LIMITING=true

# Development Only
DISABLE_SECURE_COOKIES=true