# PolicyLabs Environment Variables
# Copy this file to .env and update with your values

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Database Configuration
DATABASE_URL=postgresql://postgres:policylabs123@localhost:5432/policylabs
POSTGRES_DB=policylabs
POSTGRES_USER=postgres
POSTGRES_PASSWORD=policylabs123

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Weaviate Configuration
WEAVIATE_URL=http://localhost:8080

# Backend Configuration
SECRET_KEY=your-super-secret-key-change-in-production-please
ENVIRONMENT=development
DEBUG=true

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# AWS S3 Configuration (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=policylabs-uploads

# Monitoring Configuration (Optional)
SENTRY_DSN=your-sentry-dsn-here

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# File Upload Limits
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,csv,xlsx