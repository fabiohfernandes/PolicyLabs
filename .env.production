# Production Environment Variables
# Copy this file and update with your production values

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Database Configuration
DATABASE_URL=postgresql://postgres:your-password@postgres:5432/policylabs
POSTGRES_DB=policylabs
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here

# Redis Configuration
REDIS_URL=redis://redis:6379

# Weaviate Configuration
WEAVIATE_URL=http://weaviate:8080

# Backend Configuration
SECRET_KEY=your-super-secure-secret-key-256-bits-minimum
ENVIRONMENT=production
DEBUG=false

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://your-backend-url.com
NEXT_PUBLIC_APP_URL=https://your-frontend-url.com

# NextAuth Configuration
NEXTAUTH_URL=https://your-frontend-url.com
NEXTAUTH_SECRET=your-nextauth-secret-key-here

# Optional Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Optional AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=policylabs-uploads

# Monitoring Configuration
SENTRY_DSN=your-sentry-dsn-here

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# File Upload Limits
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,csv,xlsx